<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".View.AddRoom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_line"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Заголовок"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="35sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/bg_line"
            android:layout_weight="5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/bg_lower_line"
                            android:padding="12dp">

                            <EditText
                                android:id="@+id/num_room"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_marginLeft="12dp"
                                android:layout_marginEnd="12dp"
                                android:layout_marginRight="12dp"
                                android:background="@drawable/bg_button"
                                android:gravity="center"
                                android:hint="Номер помещения:"
                                android:paddingTop="16dp"
                                android:paddingBottom="16dp"
                                android:textColor="@color/black"
                                android:textColorHint="#808080"
                                android:textSize="33sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/bg_lower_line"
                            android:padding="12dp">

                            <EditText
                                android:id="@+id/name_room"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_marginLeft="12dp"
                                android:layout_marginEnd="12dp"
                                android:layout_marginRight="12dp"
                                android:background="@drawable/bg_button"
                                android:gravity="center"
                                android:hint="Название помещения:"
                                android:paddingTop="16dp"
                                android:paddingBottom="16dp"
                                android:textColor="@color/black"
                                android:textColorHint="#808080"
                                android:textSize="33sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/bg_lower_line"
                            android:padding="12dp">

                            <EditText
                                android:id="@+id/status_room"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_marginLeft="12dp"
                                android:layout_marginEnd="12dp"
                                android:layout_marginRight="12dp"
                                android:background="@drawable/bg_button"
                                android:gravity="center"
                                android:hint="Статус помещения:"
                                android:paddingTop="16dp"
                                android:paddingBottom="16dp"
                                android:textColor="@color/black"
                                android:textColorHint="#808080"
                                android:textSize="33sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/bg_lower_line"
                            android:padding="12dp">

                            <EditText
                                android:id="@+id/length_sleeve"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_marginLeft="12dp"
                                android:layout_marginEnd="12dp"
                                android:layout_marginRight="12dp"
                                android:background="@drawable/bg_button"
                                android:gravity="center"
                                android:hint="Длина рукавной линии:"
                                android:paddingTop="16dp"
                                android:paddingBottom="16dp"
                                android:textColor="@color/black"
                                android:textColorHint="#808080"
                                android:textSize="33sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/bg_lower_line"
                            android:padding="12dp">

                            <EditText
                                android:id="@+id/state_num_people_in"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_marginLeft="12dp"
                                android:layout_marginEnd="12dp"
                                android:layout_marginRight="12dp"
                                android:background="@drawable/bg_button"
                                android:gravity="center"
                                android:hint="Постоянное количество человек:"
                                android:paddingTop="16dp"
                                android:paddingBottom="16dp"
                                android:textColor="@color/black"
                                android:textColorHint="#808080"
                                android:textSize="33sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/bg_lower_line"
                            android:padding="12dp">

                            <EditText
                                android:id="@+id/approx_num_people_in"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_marginLeft="12dp"
                                android:layout_marginEnd="12dp"
                                android:layout_marginRight="12dp"
                                android:background="@drawable/bg_button"
                                android:gravity="center"
                                android:hint="Примерное количество человек:"
                                android:paddingTop="16dp"
                                android:paddingBottom="16dp"
                                android:textColor="@color/black"
                                android:textColorHint="#808080"
                                android:textSize="33sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/bg_lower_line"
                            android:padding="12dp">

                            <EditText
                                android:id="@+id/room_with_ahs"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_marginLeft="12dp"
                                android:layout_marginEnd="12dp"
                                android:layout_marginRight="12dp"
                                android:background="@drawable/bg_button"
                                android:gravity="center"
                                android:hint="Помещения с нахождением ахов:"
                                android:paddingTop="16dp"
                                android:paddingBottom="16dp"
                                android:textColor="@color/black"
                                android:textColorHint="#808080"
                                android:textSize="33sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/bg_lower_line"
                            android:padding="12dp">

                            <EditText
                                android:id="@+id/room_with_sanitary"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_marginLeft="12dp"
                                android:layout_marginEnd="12dp"
                                android:layout_marginRight="12dp"
                                android:background="@drawable/bg_button"
                                android:gravity="center"
                                android:hint="Помещения соблюдения санитарного режима:"
                                android:paddingTop="16dp"
                                android:paddingBottom="16dp"
                                android:textColor="@color/black"
                                android:textColorHint="#808080"
                                android:textSize="33sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/bg_lower_line"
                            android:padding="12dp">

                            <EditText
                                android:id="@+id/rv_dm_vv_rtt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_marginLeft="12dp"
                                android:layout_marginEnd="12dp"
                                android:layout_marginRight="12dp"
                                android:background="@drawable/bg_button"
                                android:gravity="center"
                                android:hint="Помещения с нахождением РВ, ДМ, ВВ, РТТ:"
                                android:paddingTop="16dp"
                                android:paddingBottom="16dp"
                                android:textColor="@color/black"
                                android:textColorHint="#808080"
                                android:textSize="33sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/bg_lower_line"
                            android:padding="12dp">

                            <EditText
                                android:id="@+id/num_entry"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_marginLeft="12dp"
                                android:layout_marginEnd="12dp"
                                android:layout_marginRight="12dp"
                                android:background="@drawable/bg_button"
                                android:gravity="center"
                                android:hint="Количество входов:"
                                android:paddingTop="16dp"
                                android:paddingBottom="16dp"
                                android:textColor="@color/black"
                                android:textColorHint="#808080"
                                android:textSize="33sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/bg_lower_line"
                            android:padding="12dp">

                            <EditText
                                android:id="@+id/area_size_room"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_marginLeft="12dp"
                                android:layout_marginEnd="12dp"
                                android:layout_marginRight="12dp"
                                android:background="@drawable/bg_button"
                                android:gravity="center"
                                android:hint="Площадь:"
                                android:paddingTop="16dp"
                                android:paddingBottom="16dp"
                                android:textColor="@color/black"
                                android:textColorHint="#808080"
                                android:textSize="33sp" />

                        </LinearLayout>

                    </LinearLayout>

                </ScrollView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_line"
            android:gravity="center|end">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4">

                    <Button
                        android:id="@+id/add_plan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="24dp"
                        android:background="@drawable/bg_button"
                        android:text="Добавить план этажа"
                        android:textColor="@color/black"
                        android:textSize="33sp"
                        app:backgroundTint="@color/black"
                        app:backgroundTintMode="add" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/save_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="24dp"
                        android:background="@drawable/save_btn" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>